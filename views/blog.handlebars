<div class="container">
    <div class="row">
        <div class="card text-dark shadow mb-3 blogPost-main" style="background-color: #f0f0f0;">
            <div class="text-center mx-auto p-3">
                <h2 style="color: #333;">{{title}}</h2>
                <p>Created by {{user.name}} on {{format_date date_created}}</p>
                <p>{{description}}</p>
                <button class="btn btn-dark" id="editBtn">Edit</button>
                <button class="btn btn-dark" id="deleteBtn">Delete</button>
            </div>

            <div class="text-center">
                <h3 style="color: #555;">Comments</h3>
                {{#each comments as |comment| }}
                    <div>
                        <p>{{comment.comment_body}} by {{comment.user.name}} on {{format_date comment.date_created}}</p>
                    </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>

{{> comment}}

<script src="/js/newComment.js"></script>
<script src="/js/deletePost.js"></script>
<script src="/js/editPost.js"></script>
